<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DefaultActionBar</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AboutActivity.Theme" parent="TranslucentTheme">
        <item name="android:displayOptions">homeAsUp|showHome</item>
    </style>

    <style name="TranslucentActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:icon">@drawable/redken_logo</item>
    </style>

    <style name="DefaultActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:icon">@drawable/redken_logo</item>
    </style>

</resources>
