<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/result_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="25dp"
              android:gravity="center"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="40dp"
        android:background="@color/result_product_bg"
        android:src="@drawable/coiffure1">

        <ImageView
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:paddingBottom="60dp"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/cerafill_defy_shampoo" />

        <TextView
            android:text="Cerafill Defy Shampoo"
            android:background="#ffff"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/result_product_text"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="40dp"
        android:background="@color/result_product_bg"
        android:src="@drawable/coiffure1">

        <ImageView
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:paddingBottom="60dp"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/cerafill_defy_conditioner" />

        <TextView
            android:text="Cerafill Defy Conditioner"
            android:background="#ffff"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/result_product_text"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="40dp"
        android:background="@color/result_product_bg"
        android:src="@drawable/coiffure1">

        <ImageView
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:paddingBottom="60dp"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/cerafill_defy_scalp_treatment" />

        <TextView
            android:text="Cerafill Defy Scalp Treatment"
            android:background="#ffff"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/result_product_text"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
